{
    "name": "interep-reputation-service",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "npm-run-all -p next:start",
        "dev": "yarn db:reset && npm-run-all -p tasks next:dev",
        "build": "yarn lint && NODE_OPTIONS='--max-old-space-size=1536' next build --debug",
        "analyze": "ANALYZE=true yarn build",
        "script": "node -r dotenv/config -r tsconfig-paths/register -r ts-node/register",
        "next:dev": "next dev",
        "next:start": "next start",
        "tasks": "yarn script src/tasks/index.ts",
        "db:seed-zero-hashes": "yarn script scripts/seedZeroHashes.ts",
        "db:reset": "yarn script scripts/resetDB.ts",
        "test": "jest --verbose",
        "test:w": "jest --watch",
        "test:prod": "yarn lint && yarn test",
        "lint": "eslint src --ext js,jsx,ts,tsx",
        "prettier": "prettier -c src",
        "prettier:fix": "prettier -w src",
        "validate": "concurrently tsc 'yarn run lint' 'yarn run prettier'",
        "commit": "cz",
        "precommit": "lint-staged",
        "barrels":"barrelsby --config .barrelsby.json"
    },
    "engines": {
        "node": "16.x",
        "yarn": "1.x"
    },
    "cacheDirectories": [
        "node_modules/",
        ".next/cache/"
    ],
    "dependencies": {
        "@chakra-ui/react": "^1.8.6",
        "@emotion/react": "^11",
        "@emotion/styled": "^11",
        "@fontsource/inter": "^4.5.5",
        "@interep/db": "^0.3.1",
        "@interep/identity": "0.2.0",
        "@interep/reputation": "0.5.0",
        "@interep/telegram-bot": "0.2.0",
        "@metamask/detect-provider": "^1.2.0",
        "@octokit/core": "^4.2.0",
        "@octokit/plugin-paginate-graphql": "^2.0.1",
        "@types/cors": "^2.8.12",
        "@types/node-schedule": "^1.3.2",
        "@types/nodemailer": "^6.4.4",
        "@zk-kit/incremental-merkle-tree": "^0.4.2",
        "botometer": "^1.0.12",
        "chakra-ui-steps": "^1.7.2",
        "circomlibjs": "^0.0.8",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "ethers": "^5.4.5",
        "framer-motion": "^4",
        "js-sha256": "^0.9.0",
        "next": "^11.1.2",
        "next-auth": "^3.29.0",
        "node-schedule": "^2.1.0",
        "nodemailer": "^6.7.0",
        "npm-run-all": "^4.1.5",
        "react": "17.0.2",
        "react-device-detect": "^1.17.0",
        "react-dom": "17.0.2",
        "react-icons": "^4.3.1",
        "ts-node": "^10.2.0",
        "tsconfig-paths": "^3.9.0",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "@babel/core": "^7.15.5",
        "@commitlint/cli": "^13.1.0",
        "@commitlint/config-conventional": "^13.1.0",
        "@next/bundle-analyzer": "^10.2.0",
        "@testing-library/react-hooks": "^7.0.0",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.35",
        "@types/react": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "babel-jest": "^26.6.3",
        "barrelsby": "^2.5.1",
        "chai": "^4.2.0",
        "commitizen": "^4.2.4",
        "concurrently": "^7.6.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.2.0",
        "eslint-config-airbnb": "18.2.1",
        "eslint-config-airbnb-typescript": "^14.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.4.0",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^1.7.0",
        "jest": "^26.6.3",
        "jest-chain": "^1.1.6",
        "jest-fetch-mock": "^3.0.3",
        "lint-staged": "^11.1.2",
        "mongodb-memory-server": "^7.3.6",
        "msw": "^0.29.0",
        "node-mocks-http": "^1.10.1",
        "prettier": "^2.2.1",
        "prettier-plugin-solidity": "^1.0.0-beta.10",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
